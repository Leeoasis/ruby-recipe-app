<div class="page-wrapper">
<div class="heading_container">
  <h1>Recipe Hub</h1>
  <p class="app_description">Discover, Create, and Share: Join RecipeBook and embark on a delicious journey with a community of passionate food lovers</p>
</div>

<div class="registration_container">
<div class="registration_form_container">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'input_field' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:'registration_button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
