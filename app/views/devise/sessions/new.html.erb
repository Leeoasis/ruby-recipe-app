<div class="page-wrapper">
<div class="heading_container">
  <h1>Recipe Hub</h1>
  <p class="app_description">Discover, Create, and Share: Join RecipeBook and embark on a delicious journey with a community of passionate food lovers</p>
</div>

<div class="registration_container">
<div class="registration_form_container">
<h2>Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'input_field' %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:'input_field' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class:'checkbox_field' %>
      <%= f.label :remember_me, class:'checkbox_field' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:'registration_button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>