<div class="registration_container">
<div class="registration_form_container">
<%= form_with model: @food do |form| %>
  <% if @food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@food.errors.count, "error") %> prohibited this food from being saved:</h2>
      <ul>
        <% @food.errors.full_messages.each  do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %><br/>
    <%= form.text_field :name, class:'input_field', placeholder: 'e.g Lasagna' %>
  </div>

  <div class="field">
    <%= form.label :measurement_unit %><br/>
    <%= form.text_field :measurement_unit, class:'input_field', placeholder: 'e.g gramms' %>
  </div>

  <div class="field">
    <%= form.label :price %><br/>
    <%= form.number_field :price, step: '0.01', class:'input_field' %>
  </div>

  <div class="actions">
    <%= form.submit class:'registration_button'%>
  </div>
<% end %>
</div>
</div>